<Window x:Class="DeskBooking.Views.UserFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Form" Height="320" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="User Details" FontWeight="Bold" FontSize="20" Margin="0,0,0,18"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="First Name:" Width="100" VerticalAlignment="Center"/>
            <TextBox Width="220" Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Margin="4,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Last Name:" Width="100" VerticalAlignment="Center"/>
            <TextBox Width="220" Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Margin="4,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Email:" Width="100" VerticalAlignment="Center"/>
            <TextBox Width="220" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="4,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Right" Margin="0,18,0,0">
            <Button MinWidth="90" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}">
                <TextBlock Text="OK" TextWrapping="Wrap" TextAlignment="Center"/>
            </Button>
            <Button MinWidth="90" IsCancel="True"
                    Style="{StaticResource MaterialDesignOutlinedButton}">
                <TextBlock Text="Cancel" TextWrapping="Wrap" TextAlignment="Center"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
