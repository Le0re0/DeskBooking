<Window x:Class="DeskBooking.Views.DeskFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Desk Form" Height="200" Width="300" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Desk Details" FontWeight="Bold" FontSize="20" Margin="0,0,0,18"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,8">
            <TextBlock Text="Desk Number:" Width="90" VerticalAlignment="Center"/>
            <TextBox Width="150" Text="{Binding DeskNumber, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,8">
            <TextBlock Text="Active:" Width="90" VerticalAlignment="Center"/>
            <CheckBox IsChecked="{Binding IsActive}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right">
            <Button MinWidth="60" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click" Style="{StaticResource MaterialDesignRaisedButton}">
                <TextBlock Text="OK" TextWrapping="Wrap" TextAlignment="Center"/>
            </Button>
            <Button MinWidth="60" IsCancel="True" Style="{StaticResource MaterialDesignOutlinedButton}">
                <TextBlock Text="Cancel" TextWrapping="Wrap" TextAlignment="Center"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
