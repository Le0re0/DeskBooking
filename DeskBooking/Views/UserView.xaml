<UserControl x:Class="DeskBooking.Views.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:DeskBooking.Views"
             Height="Auto" Width="Auto">
    <UserControl.DataContext>
        <vm:UserViewModel />
    </UserControl.DataContext>
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Search TextBox -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,6">
            <TextBlock Text="Search:" VerticalAlignment="Center"/>
            <TextBox Width="200" Margin="6,0,0,0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <!-- DataGrid -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Users}" 
                  SelectedItem="{Binding SelectedUser, Mode=TwoWay}" 
                  AutoGenerateColumns="False" Margin="0,0,0,6">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}"/>
                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
            </DataGrid.Columns>
        </DataGrid>
        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Left">
            <Button Content="Add" Command="{Binding AddCommand}" Margin="0,0,6,0"/>
            <Button Content="Delete" Command="{Binding DeleteCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
